        2px 0 #fdcf00,
        -2px 0 #fdcf00,
        0 2px #fdcf00,
        0 -2px #fdcf00,
        1px 1px #fdcf00,
        -1px -1px #fdcf00,
        1px -1px #fdcf00,
        -1px 1px #fdcf00;
    }

    @media screen and (max-width: 768px) {
      h1,
      h3 {
        font-size: 7rem;
        text-wrap: wrap;
      }

      h5 {
        font-size: 5rem;
        text-wrap: wrap;
      }
    }

    @media screen and (max-width: 380px) {
