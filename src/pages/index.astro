        -2px 0 #fdcf00,
        0 2px #fdcf00,
        0 -2px #fdcf00,
        1px 1px #fdcf00,
        -1px -1px #fdcf00,
        1px -1px #fdcf00,
        -1px 1px #fdcf00;
    }

    h5 {
      font-size: 10rem;
      line-height: 8rem;
      stroke: yellow;
      text-shadow:
        2px 0 #fdcf00,
        -2px 0 #fdcf00,
        0 2px #fdcf00,
        0 -2px #fdcf00,
        1px 1px #fdcf00,
        -1px -1px #fdcf00,
        1px -1px #fdcf00,
        -1px 1px #fdcf00;
    }

    h2,
    span,
    li {
